<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.ActivityJoin">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/join_actionbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="30sp"
                android:text="회원가입"
                android:textColor="#000000">

            </TextView>
        </androidx.appcompat.widget.Toolbar>
        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/join_email"
            app:layout_constraintTop_toBottomOf="@+id/join_actionbar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="70dp"
            android:hint="이메일"
            android:inputType="textEmailAddress"
            />
        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/join_nickname"
            app:layout_constraintTop_toBottomOf="@+id/join_email"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"
            android:hint="닉네임? 한번 넣어봤음ㅎㅎ"
            />
        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/join_pw"
            app:layout_constraintTop_toBottomOf="@+id/join_nickname"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"
            android:hint="비밀번호"
            android:inputType="textPassword"
            />
        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/join_pw_check"
            app:layout_constraintTop_toBottomOf="@+id/join_pw"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"
            android:hint="비밀번호 확인(얘 필요없음 지워버려용)"
            android:inputType="textPassword"
            />

        <RadioGroup
            android:id="@+id/sex_group"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/join_pw_check"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="20dp"
            app:layout_constraintRight_toRightOf="parent"
            >
            <RadioButton
                android:id="@+id/sex_female"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="여자"
                />
            <RadioButton
                android:id="@+id/sex_male"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="남자"
                />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/join_year_layout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sex_group"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical|center_horizontal"
            >
            <TextView
                android:id="@+id/join_year_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:text="  나이  "
                android:layout_weight="1"
                android:gravity="center"
                />
            <EditText
                android:id="@+id/join_year"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:hint="나이 ex) 20"
                android:layout_weight="2"
                android:digits="0123456789"
                android:inputType="number"
                android:maxLines="1"
                />
            <TextView
                android:id="@+id/join_year_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"
                android:text="세"
                android:layout_weight="1"
                android:gravity="center"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/join_height_layout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/join_year_layout"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical|center_horizontal"
            >
            <TextView
                android:id="@+id/join_height_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:text="    키    "
                android:layout_weight="1"
                android:gravity="center"
                />
            <EditText
                android:id="@+id/join_height"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:hint="키 ex) 160"
                android:layout_weight="2"
                android:digits="0123456789"
                android:inputType="number"
                android:maxLines="1"
                />
            <TextView
                android:id="@+id/join_height_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"
                android:text="cm"
                android:layout_weight="1"
                android:gravity="center"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/join_weight_layout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/join_height_layout"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical|center_horizontal"
            >
            <TextView
                android:id="@+id/join_weight_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:text="몸무게"
                android:layout_weight="1"
                android:gravity="center"
                />
            <EditText
                android:id="@+id/join_weight"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:hint="몸무게 ex) 50"
                android:layout_weight="2"
                android:digits="0123456789"
                android:inputType="number"
                android:maxLines="1"
                />
            <TextView
                android:id="@+id/join_weight_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"
                android:text="kg"
                android:layout_weight="1"
                android:gravity="center"
                />
        </LinearLayout>

        <Button
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:id="@+id/join_btn"
            app:layout_constraintTop_toBottomOf="@+id/join_weight_layout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="50dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="회원가입"
            android:textSize="30dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>